@model DetailsCompanyModel

@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


@section Nav {

    <div class="title_header">
        <div class="title-header-container">
            <div class="container">
                <!-- if have button -->
                <div class="header-col-right float-right mt-5"><a href="@Url.Action("List", "Company", new { area = "Administrator"})" class="btn btn-outline-primary text-white"><span class="align-middle"><i class="la la-long-arrow-left">&nbsp;</i></span> Back</a></div>
                <div class="header-col-left">
                    <div id="breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { area = "" })">Home</a></li>
                                <li class="breadcrumb-item"><a href="javascript:void(0)">Administration</a></li>
                                <li class="breadcrumb-item"><a href="@Url.Action("List", "Company", new { area = "Administrator" })">User</a></li>
                                <li class="breadcrumb-item active" aria-current="page"><a href="#"></a></li>
                            </ol>
                        </nav>
                    </div>
                    <h1 class="page-title text-white">Reset User Account Password</h1>
                    @*<div class="header-text">You can register new individual here</div>*@
                </div>
            </div>
        </div>
    </div>

}

<h3>Are you sure you want to reset this user account password?</h3>
<div class="row">
    <div class="col-xl-3 col-md-3 col-sm-4 my-2">
        <div id="page-nav" class="sidebar-left page-nav">
            <div data-perfect-scrollbar>
                <div class="page-section">
                    <h6 class="x-small color-darkblue"><i class="la la-edit font-icon color-secondary align-bottom"></i> User</h6>
                    <ul class="nav page-nav__menu">
                        <li class="nav-item">
                            <a href="@Url.Action("Details", "Company", new { area = "Administrator", id = Model.Id })" class="nav-link">View</a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Edit", "Company", new { area = "Administrator", id = Model.Id })" class="nav-link">Edit</a>
                        </li>
                        @if (Model.Status)
                        {
                            <li class="nav-item">
                                <a href="@Url.Action("Deactivate", "Company", new { area = "Administrator", id = Model.Id })" class="nav-link">Disable account</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a href="@Url.Action("Activate", "Company", new { area = "Administrator", id = Model.Id })" class="nav-link">Activate account</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a href="@Url.Action("ResetPassword", "Company", new { area = "Administrator", id = Model.Id })" class="active nav-link">Reset Password</a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Delete", "Company", new { area = "Administrator", id = Model.Id })" class="nav-link">Delete</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-9 col-md-9 col-sm-8 mt-2 pb-5">

        <div class="border-form rounded-top">

            <div class="form-container">
                <div class="row">
                    <div class="form-group col-lg-12">
                        @Html.FEPLabelFor(m => m.CompanyName)
                        @Html.EditorFor(m => m.CompanyName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        @Html.FEPLabelFor(m => m.CompanyRegNo)
                        @Html.EditorFor(m => m.CompanyRegNo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        @Html.FEPLabelFor(m => m.Sector)
                        @Html.EditorFor(m => m.Sector, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        @Html.FEPLabelFor(m => m.Address1)
                        @Html.EditorFor(m => m.Address1, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        @Html.EditorFor(m => m.Address2, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        @Html.FEPLabelFor(m => m.PostCode)
                        @Html.EditorFor(m => m.PostCode, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        @Html.FEPLabelFor(m => m.City)
                        @Html.EditorFor(m => m.City, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        @Html.FEPLabelFor(m => m.State)
                        @Html.EditorFor(m => m.State, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        @Html.FEPLabelFor(m => m.CompanyPhoneNo)
                        @Html.EditorFor(m => m.CompanyPhoneNo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>
                <div class="empty_2"></div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        @Html.FEPLabelFor(m => m.Name)
                        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        @Html.FEPLabelFor(m => m.ICNo)
                        @Html.EditorFor(m => m.ICNo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        @Html.FEPLabelFor(m => m.Email)
                        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        @Html.FEPLabelFor(m => m.MobileNo)
                        @Html.EditorFor(m => m.MobileNo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        @Html.FEPLabelFor(m => m.RoleIds)
                        @Html.ListBoxFor(m => m.RoleIds, Model.Roles, htmlAttributes: new { @class = "js-example-basic-multiple", style = "width: 100%;", @disabled = "disabled", })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-12">
                        @Html.LabelFor(m => m.Status)
                        <div>
                            @if (Model.Status)
                            {
                                <span class='color-green font-weight-bold'>Active</span>
                            }
                            else
                            {
                                <span class='color-grey font-weight-bold'>Disable</span>
                            }
                        </div>
                    </div>
                </div>

            </div>

        </div>
        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form" }))
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.Email)

            <div class="border-left border-right border-bottom p-3 rounded-bottom">
                <a href="@Url.Action("List")" class="btn btn-default mr-2">Back</a>
                <button class="btn btn-secondary" type="submit">Reset</button>
            </div>

        }

    </div>

</div>

