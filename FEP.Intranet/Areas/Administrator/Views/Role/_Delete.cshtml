@model DeleteRoleModel

@{
    Layout = null;
}

<tr class="editForm">
    <td>@Html.DisplayFor(m => m.No)</td>
    <td>
        @Html.DisplayFor(m => m.Name)
    </td>
    <td>
        @Html.DisplayFor(m => m.Description)        
    </td>
    <td>
        <div class="icon-action">

            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.Id)

            <button type="submit" formaction="@Url.Action("_Delete", "Role", new { area = "Administrator"})" class="btn btn-secondary btn-sm mw-auto mr-2">Delete</button>
            <button type="button" onclick="clearForm()" class="btn btn-default btn-sm mw-auto">Cancel</button>
        </div>
    </td>
</tr>