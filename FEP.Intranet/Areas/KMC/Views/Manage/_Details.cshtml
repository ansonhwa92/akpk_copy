@model DetailsKMCModel

<div class="border-form rounded-top">

    <div class="form-container">
        <div class="row">
            <div class="form-group col-lg-12">
                @Html.FEPLabelFor(model => model.Category)
                <span class="form-control">@Model.Category.Title</span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-12">
                @Html.FEPLabelFor(model => model.Title)
                <span class="form-control">@Model.Title</span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-12">
                @Html.FEPLabelFor(model => model.Description)
                <span class="form-control">@Model.Description</span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-6">
                @Html.FEPLabelFor(model => model.ThumbnailUrl)
                <div class="media align-items-center">
                    <div class="d-flex mr-3 align-self-center">
                        @if (!String.IsNullOrEmpty(Model.ThumbnailUrl))
                        {
                            <img id="kmc_thumbnail" src="@(BaseURL)/img/kmc-thumbnail/@Model.ThumbnailUrl" class="photo" />
                        }
                        else
                        {
                            <img id="kmc_thumbnail" src="@(BaseURL)/img/no-image.png" class="photo" />
                        }
                    </div>
                </div>
            </div>
            <div class="form-group col-lg-6">
                @Html.LabelFor(model => model.IsPublic)
                <div class="form-inline mb-1">
                    <div class="custom-control custom-radio">
                        @Html.RadioButtonFor(m => m.IsPublic, "false", new { @class = "custom-control-input", id = "no3", disabled = "disabled" })
                        <label class="custom-control-label mr-3" for="no3">@Language.KMC.TextPrivate</label>
                    </div>
                    <div class="custom-control custom-radio">
                        @Html.RadioButtonFor(m => m.IsPublic, "true", new { @class = "custom-control-input", id = "yes3", disabled = "disabled" })
                        <label class="custom-control-label" for="yes3">@Language.KMC.TextPublic</label>
                    </div>
                </div>

                @if (!Model.IsPublic)
                {
                    <div class="row">
                        <div class="form-group col-lg-12">
                            @Html.FEPLabelFor(m => m.Roles)
                            <div class="input-group">
                                @foreach (var role in Model.Roles)
                                {
                                    <span class="badge badge-pill badge-primary ml-1 mb-1" data-toggle="tooltip" title="@role.Description">@role.Name</span>
                                }
                            </div>
                        </div>
                    </div>
                }

                @Html.LabelFor(model => model.IsShow)
                <div class="form-inline mb-3">
                    <div class="custom-control custom-radio">
                        @Html.RadioButtonFor(m => m.IsShow, "true", new { @class = "custom-control-input", id = "yes3", disabled = "disabled" })
                        <label class="custom-control-label mr-3" for="yes3">@Language.KMC.TextShown</label>
                    </div>
                    <div class="custom-control custom-radio">
                        @Html.RadioButtonFor(m => m.IsShow, "false", new { @class = "custom-control-input", id = "no3", disabled = "disabled" })
                        <label class="custom-control-label" for="no3">@Language.KMC.TextHide</label>
                    </div>
                </div>

                <div class="form-inline">
                    <a class="btn btn-default btn-sm mw-auto float-right my-2" href="javascript:void(0)" onclick="showContent();">
                        <span class="align-middle">
                            <i class="la la-file-o color-secondary font-icon"></i>
                        </span>Content
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
