@model FEP.WebApiModel.Reward.CreateUserRewardPointsModel
@{
    ViewBag.Title = "AwardUser";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

@section Nav {

    <div class="title_header">
        <div class="title-header-container">
            <div class="container">
                <!-- if have button -->
                @*<div class="header-col-right float-right mt-5"><a href="e-Learning.html" class="btn btn-outline-primary text-white"><span class="align-middle"><i class="la la-long-arrow-left">&nbsp;</i></span> Back</a></div>*@
                <div class="header-col-left">
                    <div id="breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { area = "" })">Home</a></li>
                                <li class="breadcrumb-item"><a href="javascript:void(0)">Reward</a></li>
                                <li class="breadcrumb-item active" aria-current="page"><a href="#"></a></li>
                            </ol>
                        </nav>
                    </div>
                    <h1 class="page-title text-white">User Reward Points</h1>
                    @*<div class="header-text">List of registered user as individual</div>*@
                </div>
            </div>
        </div>
    </div>

}

<div class="row">

    <!-- Start content leftbar -->
    <div class="col-xl-3 col-md-3 col-sm-4 my-2">
        <div id="page-nav" class="sidebar-left page-nav">
            <div data-perfect-scrollbar>
                <div class="page-section">
                    <h6 class="x-small color-darkblue"><i class="la la-cog font-icon color-secondary align-bottom"></i> User Reward Points</h6>
                    <ul class="nav page-nav__menu">
                        <li class="nav-item">
                            <a href="#" data-toggle="tab" class="nav-link active">Award a User</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End content leftbar -->

    <div class="col-xl-9 col-md-9 col-sm-8 mt-2 pb-5">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.RewardType)
            @Html.HiddenFor(m => m.RewardedBy)

            <div class="border-form rounded">
                <div class="form-container form-container-w100">
                    <div class="mb-4 mt-2">
                        <h4 class="color-darkblue mb-0">Award User : Award Points to User</h4>
                    </div>


                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row">
                        <div class="form-group col-lg-12">
                            <label>@Html.DisplayNameFor(model => model.UserId)</label>
                            <div class="col-lg-12 pl-0">
                                @Html.DropDownListFor(model => model.UserId, Model.userList, "-Select User-", htmlAttributes: new { @class = "form-control select2", style = "width: 100%" })
                                @Html.ValidationMessageFor(model => model.userList, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.PointsReceived, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12 pl-0">
                            @Html.EditorFor(model => model.PointsReceived, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PointsReceived, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.AwardReason, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12 pl-0">
                            @Html.EditorFor(model => model.AwardReason, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AwardReason, "", new { @class = "text-danger" })
                        </div>
                    </div>


                </div>
                <div class="p-3 rounded-bottom">
                    <a class="btn btn-default font-weight-normal mr-2" href="@Url.Action("List")">Cancel</a>
                    <button type="submit" class="btn btn-secondary mr-2">Save</button>
                </div>


            </div>

        }
    </div>

</div>
