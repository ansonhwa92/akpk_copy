                                    </div>
                                </div>
                                <div>@Html.DisplayNameFor(m => m.filter.RewardType)</div>
                                <div class="sorting-wrap">
                                    <div class="sorting-dropdown">
                                        @Html.DropDownListFor(model => model.filter.RewardType, Model.RewardTypeList, "-Select Reward Type-", htmlAttributes: new { @class = "form-control select2", style = "width: 100%" })
