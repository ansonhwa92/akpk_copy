@model FEP.WebApiModel.Reward.ListUserRewardPointsModel
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


@section ContentScript{
    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('.tabledata').DataTable({
                serverSide: true,
                processing: true,
                ajax: {
                    "type": "POST",
                    @{
                        var sendId = CurrentUser.UserId.Value;
                    }
                    "url": '@(WebApiURL)Reward/UserRewardPoints/GetUserRewardPointsList?id=@sendId',
                    "data": function (filter) {
                        //alert(filter[0]);
                        filter.ActivityName = $('#filter_ActivityName').val();
                        filter.PointsReceived = $('#filter_PointsReceived').val();
                        filter.UserName = $('#filter_UserName').val();
                        filter.RewardType = $('#filter_RewardType').val();
                    }
                },
                columns: [
                    {
                        sortable: false,
                        render: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    
                    { sortable: true, data: 'UserName' },
                    { sortable: true, data: 'PointsReceived' },
                    {
                        sortable: true, data: 'RewardTypeName',
                        render: function (data, type, row, meta) {
                            if (data == "Admin Reward") {
                                return '<span class="badge badge-primary">'+data+'</span>';
                            }
                            if (data == "Activity") {
                                return '<span class="badge badge-secondary">'+data+'</span>';
                            }
                        }
                    },
                    { sortable: true, data: 'ActivityName' },
                    { sortable: true, data: 'RewardedByName' },
                    {
                        sortable: true, data: 'DateReceived',
                        render: function (data, type, row, meta) {

							  var x = moment(data);

							  if (x.isValid()) {
								  return x.format("DD/MM/YYYY HH:mm");
							  }
							  else {
								  return '';
							  }

                        }
                    },
                    {
                        sortable: false,
                        render: function (data, type, row, meta) {
                            var action = "";
                            action = '<div class="icon-action">'
                                    +   '<a href="@Url.Action("Details", "UserRewardPoints", new { area = "Reward" })/' + row.Id + '" data-toggle="tooltip" data-placement="top" title="View"><i class="la la-eye text-muted"></i></a>'
                                    + '</div>';

                            return action;
                        }
                    }
                ],
                paging: true,
                lengthChange: true,
                searching: true,
                ordering: true,
                orderMulti: false,
                info: true,
                autoWidth: false,
                order: [[1, 'asc']],
                language: {
                    processing: "Processing... <i class='fa fa-refresh fa-spin'></i>",
                    emptyTable: "No Record Found",
                    info: "Showing _START_ - _END_ of _TOTAL_ User Reward Points"
                },
                dom: 'rtip'
            });
            $('#lengthChange').val(table.page.len());

            $('#quickSearch').keyup( function () {
                table.search($(this).val()).draw();
            });

            $('#lengthChange').change( function() {
                table.page.len($(this).val()).draw();
            });

            $('#btnSearch').click(function () {
                table.ajax.reload();
            });

            table.on('order.dt search.dt', function () {
                var info = table.page.info();

                var start = 0;
                if (info.recordsTotal != 0) {
                    start = info.start + 1;
                }

                $('#pageInfo').html('Showing ' + (info.start + 1) + ' - ' + info.end + ' of ' + info.recordsTotal + ' User Reward Points ');
                $('[data-toggle="tooltip"]').tooltip({ trigger: 'hover' });
            }).draw();
        });
    </script>
}
