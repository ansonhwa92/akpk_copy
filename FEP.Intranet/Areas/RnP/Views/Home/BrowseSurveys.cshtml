    <!-- =====================
       Searching Result
    ========================-->
    <section id="search-result" class="publications">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="search-col-left">
                        <div class="input-keyword mb-5">
                            <input type="text" class="form-control form-control-rounded" placeholder="Type keyword here..." name="keyword">
                            <div class="input-group-append">
                                <button class="btn btn-circle" type="button"><i class="fas fa-search text-white"></i></button>
                            </div>
                        </div>
                        <!-- Listing Filter -->
                        <div class="listing_filter dropdown dd-side">
                            <div class="dropdown-menu">
                                <div class="listing-filter-inner">
                                    <div class="filter-type">
                                        <h4 class="color-darkblue">Survey Category</h4>
                                        <!--
                                        <div class="custom-control custom-radio">
                                            <input type="radio" id="customRadio1" name="customRadio" class="custom-control-input" checked>
                                            <label class="custom-control-label" for="customRadio1">Surveys for Me</label>
                                        </div>
                                        -->
                                        <div class="custom-control custom-radio">
                                            <input type="radio" id="customRadio2" name="customRadio" class="custom-control-input">
                                            <label class="custom-control-label" for="customRadio2">Public Surveys</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-secondary btn-rounded">Clear Filter</button>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="search-col-right">
                        <div class="top-filter-wrap">
                            <div class="showing-result">Showing 1 - 6 of 2000 results</div>
                            <div class="sorting-wrap">
                                <div class="sorting-dropdown">
                                    <select class="select2 form-control" name="sorting">
                                        <option value="Default Sorting">Default Sorting</option>
                                        <option value="Other Sorting">Other Sorting</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="empty_3"></div>
                        <!-- Filter result -->
                        <div class="some-list">
                            <div class="row">
                                @{
                                    var icount = 0;
                                    var coverpic1 = "";
                                    var coverpic2 = "";
                                    var authorpic = "";
                                }
                                @foreach (var item in Model)
                                {
                                    icount++;
                                    if (item.Pictures != "")
                                    {
                                        coverpic1 = BaseURL + "/" + "img" + "/" + item.Pictures;
                                        coverpic2 = BaseURL + "/" + "img" + "/" + item.Pictures;
                                        authorpic = BaseURL + "/" + "img" + "/" + item.Pictures;
                                        coverpic1 = BaseURL + "/" + "img" + "/cover-buku-2.jpg";
                                        coverpic2 = BaseURL + "/" + "img" + "/cover-buku-2.jpg";
                                        authorpic = BaseURL + "/" + "img" + "/47.jpg";
                                    }
                                    else
                                    {
                                        coverpic1 = BaseURL + "/" + "img" + "/cover-buku-2.jpg";
                                        coverpic2 = BaseURL + "/" + "img" + "/cover-buku-2.jpg";
                                        authorpic = BaseURL + "/" + "img" + "/47.jpg";
                                    }

                                    <div class="col-lg-4 col-sm-6">
                                        <div class="card__wrapper">
                                            <div class="card__top">
                                                <div class="card__top__wapper"><img class="card__top__image" src="@coverpic1" alt="image"></div>
                                            </div>
                                            <div class="card__body">
                                                @if (item.Type == SurveyType.Public)
                                                {
                                                    <a class="card__title" href="@Url.Action("PublicSurvey", "Home", new { area = "RnP", @id = item.ID })">@item.Title</a>
                                                }
                                                else
                                                {
                                                    <a class="card__title" href="@Url.Action("PrivateSurvey", "Home", new { area = "RnP", @id = item.ID })">@item.Title</a>
                                                }
                                                <div class="card__author">
                                                    <a class="card__col-left" href="#"><span class="card__avatar"><img class="card__avatar__image" src="@authorpic"></span><span class="card__name-wrap"><span class="card__instructby">Survey for</span><span class="card__author-name">@if (item.Type == SurveyType.Public)
                                                    {<text>Public</text> }
                                                else
                                                { <text>Targeted Groups</text>}</span></span></a>
                                                </div>
                                                <div class="card__info">
                                                    <div class="card__col-left">
                                                        <div class="col-left__item"><span class="card__icon"><i class="la la-list-ul"></i></span><span class="d-inline-block" data-toggle="tooltip" title="Survey Category"><span class="d-inline-block">@item.Category</span></span></div>
                                                        <div class="col-left__item"><span class="card__icon"><i class="la la-calendar"></i></span><span class="d-inline-block" data-toggle="tooltip" title="Expires On"><span class="d-inline-block">@item.EndDate.ToString("dd/MM/yyyy")</span></span></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <hr />
    <section id="search-result" class="publications">
