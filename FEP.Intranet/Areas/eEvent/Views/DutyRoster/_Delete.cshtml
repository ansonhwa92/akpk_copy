@model DeleteDutyRosterModel

@{
	Layout = null;
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formDelete" }))
{
	@Html.AntiForgeryToken()

	@Html.HiddenFor(model => model.Id)

	<div class="row divTd">
		<div class="col-1 text-center">@Html.DisplayFor(model => model.No)</div>
		<div class="col px-0">@Html.DisplayFor(model => model.Date)</div>
		<div class="col px-0">@Html.DisplayFor(model => model.StartTime)</div>
		<div class="col px-0">@Html.DisplayFor(model => model.EndTime)</div>
		<div class="col-3 pl-0 text-right">
			<div class="icon-action">
				<button type="submit" class="btn btn-secondary btn-sm mw-auto mr-2">@Language.General.ButtonDelete</button>
				<button type="button" onclick="clearForm()" class="btn btn-default btn-sm mw-auto">@Language.General.ButtonCancel</button>
			</div>
		</div>
	</div>
}

