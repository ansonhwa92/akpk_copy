@model FEP.Intranet.Areas.eEvent.Models.DeleteEventSpeakerModel

@{
	ViewBag.Title = "Delete";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@section ContentScript{

	@Scripts.Render("~/bundles/dataTable-script")

	<script type="text/javascript">
		$('.menu_eventSpeaker').addClass('active');
		$('.menu_eventSpeaker').parent('ul').parent('li').addClass('active');
	</script>
}

<div class="row">
	<div class="col-xs-12">
		<div class="box box-info">
			<div class="box-header"><h3 class="box-title">Event Speaker Details</h3></div>

			<div class="box-body">
				<dl class="dl-horizontal">
					<dt>@Html.DisplayNameFor(model => model.SpeakerType)</dt>
					<dd>@Html.DisplayFor(model => model.SpeakerType)</dd>

					<dt>@Html.DisplayNameFor(model => model.UserId)</dt>
					<dd>@Html.DisplayFor(model => model.UserName)</dd>

					<dt>@Html.DisplayNameFor(model => model.DateAssigned)</dt>
					<dd>@Html.DisplayFor(model => model.DateAssigned)</dd>

					<dt>@Html.DisplayNameFor(model => model.Remark)</dt>
					<dd>@Html.DisplayFor(model => model.Remark)</dd>

				</dl>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-xs-12">
		<div class="alert alert-danger">
			<h4><i class="icon fa fa-ban"></i> Alert!</h4>
			Are you sure you want to delete this?
			<div style="margin-top:10px">
				@using (Html.BeginForm())
				{
					@Html.AntiForgeryToken()
					@Html.HiddenFor(model => model.Id)

					<a href='@Url.Action("List")' style="text-decoration: none;" class="btn btn-warning btn-flat">Cancel</a>
					<button type="submit" class="btn btn-primary">Delete</button>
				}
			</div>
		</div>
	</div>
</div>