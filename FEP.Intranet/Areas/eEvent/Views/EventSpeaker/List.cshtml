@model FEP.WebApiModel.eEvent.ListEventSpeakerModel

@{
	ViewBag.Title = "Event Speaker";
	Layout = "~/Views/Shared/_Layout1.cshtml";
}

@section Contentscript{
	<script type="text/javascript">

		 $(document).ready(function () {

            var table = $('.tabledata').DataTable({
                serverSide: true,
                processing: true,
                ajax: {
                    "type": "post",
                    "url": '@(WebApiURL)eEvent/EventSpeaker/GetSpeakerList',
                    "data": function (filter) {
                        filter.UserId = $('#Filter_UserId').val();
                        //filter.ICNo = $('#Filter_ICNo').val();
                        //filter.MobileNo = $('#Filter_MobileNo').val();
                        //filter.Email = $('#Filter_Email').val();
                    }
                },
				columns: [

					 {
                        sortable: false,
                        render: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        data: 'UserName',
                        sortable: true
                    },
                    {
                        data: 'SpeakerTypeDesc',
                        sortable: true
					},

					{
						data: 'DateAssigned',
						sortable: true,
						render: function (data, type, row, meta) {

							var x = moment(data);

							if (x.isValid()) {
								return x.format("DD/MM/YYYY");
							}
							else {
								return '';
							}

						}
					},
					
                    {
						data: 'Email',

                        sortable: false,

                    },
                    {
                        sortable: false,
                        render: function (data, type, row, meta) {

                            var action = "";

                            action = '<div class="icon-action">'
                                    +   '<a href="@Url.Action("Edit", "EventSpeaker", new { area = "eEvent" })/' + row.Id + '" data-toggle="tooltip" data-placement="top" title="Edit"><i class="la la-edit text-muted"></i></a>'
                                    +   '<a href="@Url.Action("Details", "EventSpeaker", new { area = "eEvent" })/' + row.Id + '" data-toggle="tooltip" data-placement="top" title="View"><i class="la la-eye text-muted"></i></a>'
                                    +   '<a href="@Url.Action("Delete", "EventSpeaker", new { area = "eEvent" })/' + row.Id + '" data-toggle="tooltip" data-placement="top" title="Delete"><i class="la la-trash-o text-muted"></i></i></a>'
                                    + '</div>';

                            return action;
                        }
                    }
                ],
                paging: true,
                lengthChange: true,
                searching: true,
                ordering: true,
                orderMulti: false,
                info: true,
                autoWidth: false,
                order: [[1, 'asc']],
                language: {
                    processing: "Processing... <i class='fa fa-refresh fa-spin'></i>",
                    emptyTable: "No Record Found",
                    info: "Showing _START_ - _END_ of _TOTAL_"
                },
                dom: 'rtip'
            });

            $('#lengthChange').val(table.page.len());

            $('#quickSearch').keyup( function () {
                table.search($(this).val()).draw();
            });

            $('#lengthChange').change( function() {
                table.page.len($(this).val()).draw();
            });

            $('#btnSearch').click(function () {
                table.ajax.reload();
            });

            table.on('order.dt search.dt page.dt', function () {
                var info = table.page.info();

                var start = 0;
                if (info.recordsTotal != 0) {
                    start = info.start + 1;
                }

                $('#pageInfo').html('Showing ' + start + ' - ' + info.end + ' of ' + info.recordsTotal);
                $('[data-toggle="tooltip"]').tooltip({ trigger: 'hover' });
            }).draw();


        });
	</script>
}

