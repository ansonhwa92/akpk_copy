@model FEP.Intranet.Areas.eEventMediaInterview.Models.ListMediaInterviewModel

@{
	ViewBag.Title = "Media Interview";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@section ContentStyle{
	@Styles.Render("~/bundles/dataTable-css")
}

@section ContentScript{

	@Scripts.Render("~/bundles/dataTable-script")

	<script type="text/javascript">
		$('.menu_mediaInterview').addClass('active');
		$('.menu_mediaInterview').parent('ul').parent('li').addClass('active');

		$(document).ready(function () {
			var t = $('.tabledata').DataTable({
				"columnDefs": [{
					"searchable": false,
					"orderable": false,
					"targets": [0, 6]
				}],
				"order": [[1, 'asc']],
				"paging": true,
				"lengthChange": true,
				"searching": true,
				"ordering": true,
				"info": true,
				"autoWidth": false,
				"language": {
					"emptyTable": "No record found"
				},
				"lengthMenu": [10, 25, 50],
				buttons: [{
					extend: 'csvHtml5',
					title: 'Export Field Of Research List',
					//fieldSeparator:'|',
					exportOptions: {
						columns: [1]
					}
				}]
			});
			t.on('order.dt search.dt', function () {
				t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
					cell.innerHTML = i + 1;
				});
			}).draw();

			$('#export').click(function () { t.button('0').trigger(); });

		});

	</script>
}

@section Nav {

	<ol class="breadcrumb">
		<li>E-Event</li>
		<li>Media Interview</li>
	</ol>
}

<div class="row">
	<div class="col-xs-12">
		<div class="box box-info">
			<div class="box-header">
				<h3 class="box-title">Media Interview List</h3>
				<div class="pull-right box-tools">

					<a href='@Url.Action("Create")' class="btn btn-primary btn-xs" title="Add"><i class="fa fa-plus"></i></a>
					<a class="btn btn-success btn-xs" title="Export" id="export"><i class="fa fa-file-excel-o"></i></a>

				</div>
			</div><!-- /.box-header -->


			<div class="box-body">
				<table class="table table-bordered table-striped tabledata table-hover">
					<thead>
						<tr>
							<th>No.</th>
							<th>@Html.DisplayNameFor(m => m.filter.MediaName)</th>
							<th>@Html.DisplayNameFor(m => m.filter.MediaType)</th>
							<th>@Html.DisplayNameFor(m => m.filter.ContactPerson)</th>
							<th>@Html.DisplayNameFor(m => m.filter.Date)</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model.MediaInterviewList)
						{
						<tr>
							<td></td>
							<td>@Html.DisplayFor(m => item.MediaName)</td>
							<td>@Html.DisplayFor(m => item.MediaType)</td>
							<td>@Html.DisplayFor(m => item.ContactPerson)</td>
							<td>@Html.DisplayFor(m => item.Date)</td>
							<td>
								@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
								@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
								@Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
							</td>
						</tr>
						}
					</tbody>
				</table>
			</div>


		</div>
	</div>
</div>

<div class="row">
	<div class="col-xs-12">
		<a href='@Url.Action("Index", "Project" , new { area = "Projects"})' class="btn btn-warning">Back</a>
	</div>
</div>