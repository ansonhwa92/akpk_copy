@model CertificatesModel

<div class="tab-pane" id="template">
    <div class="form-container form-container-w100">
        <div class="d-flex pb-4 align-items-center">
            <div>
                <h4 class="color-darkblue mb-0">Template List</h4>
                <h6 class="font-weight-normal">Select to manage</h6>
            </div>
            <div id="pageInfo" class="showing-result px-3 py-2 mr-auto"></div>
            <div><a href="@Url.Action("Create_Template", "Certificates", new { area = "eLearning" })" class="btn btn-secondary"><i class="la la-plus font-icon" style="font-size: 1.5rem;"></i>Add Template</a></div>
        </div>
        <div>
            <div class="mxw-660">
                <div class="row">
                    @foreach (var item in Model.Template)
                    {
                        <div class="col-lg-4">
                            <div class="box-contain">
                                <div class="card text-center">
                                    @Html.DisplayFor(model => item.Description) -
                                    @Html.DisplayFor(model => item.TypePageOrientation)
                                    <div>
                                        <a href='@Url.Action("Edit_Template", "Certificates", new { area = "eLearning", id = item.Id})'></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="border-top p-3 rounded-bottom">
        <a class="btn btn-default font-weight-normal mr-2" href='@Url.Action("Dashboard", "Home", new { area = "" })'>Back</a>
    </div>
</div>
