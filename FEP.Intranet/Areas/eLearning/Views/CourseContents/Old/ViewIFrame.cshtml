@using FEP.Model.eLearning
@model FEP.WebApiModel.eLearning.CreateOrEditContentModel
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout1.cshtml";

    var name = Model.Title;

    var desc = Model.ContentType.ToString();

}

@Html.Partial("_viewNav")

<div class="row">

    <div class="col-xl-3 col-md-3 col-sm-4 my-2">
        <div id="page-nav" class="sidebar-left page-nav">
            <div data-perfect-scrollbar class="ps">
                <div class="page-section">
                    <h6 class="x-small color-darkblue"><i class="la la-edit font-icon color-secondary align-bottom"></i>Course</h6>
                    <ul class="nav page-nav__menu">
                        <li class="nav-item">
                            <a href="#" class="nav-link">@Model.ContentType</a>
                        </li>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-9 col-md-9 col-sm-8 mt-2 pb-5">
        <!-- Start Form -->
        <div class="border-form rounded-top">
            <div class="form-container">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <h3>@Model.Title</h3>
                </div>

                @Html.Raw(Model.Description)

                <hr />

                <label>
                    This content is also available <a href="@Model.Url">here.</a>
                </label>

                @if (Model.ShowIFrameAs == ShowIFrameAs.Embedded)
                {

                    <iframe src="@Model.Url" width="100%" height="700"
                            frameborder="0" allowfullscreen></iframe>
                }
                else
                {
                    <label>
                        <br />
                        This content requires you to allow pop up for this site.

                        <br />
                    </label>

                    <script>
                        window.open("@Model.Url", "popup", 'width=800, height=600');
                        window.close();
                    </script>
                }

                @Html.Partial("_contentCompletionView", new ContentCompletionModel
           {
               Id = Model.Id,
               CourseId = Model.CourseId,
               CourseModuleId = Model.CourseModuleId,
               CompletionType = Model.CompletionType,
               ContentId = Model.Id,
               ContentQuestionId = Model.ContentQuestionId,
               Timer = Model.Timer,
               Title = Model.Title,
               Order = Model.Order
           })
            </div>
        </div>

        @Html.Partial("_viewBack")
    </div>
</div>

<style>

    .form-container {
        max-width: none !important;
    }
</style>
@section ContentScript {

}