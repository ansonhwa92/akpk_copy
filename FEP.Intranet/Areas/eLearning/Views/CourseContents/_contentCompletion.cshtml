@using FEP.Model.eLearning
@model FEP.WebApiModel.eLearning.CreateOrEditContentModel

<div class="form-group">
    <label>@Language.eLearning.Content.CompletionCriteria</label>

    <div class="col-sm=12">

        <div class="completion-radio row pl-4">
            <div class="col-sm-4 pt-2">

                <input type="radio" class="custom-control-input clickButton" checked="checked"
                       value=@ContentCompletionType.ClickButton id="clickButton"
                       name="CompletionType">
                <label class="custom-control-label" for="clickButton">@Language.eLearning.Enum.ClickButton</label>
            </div>
        </div>

        <!-- Default inline 2-->
        <div class="completion-radio row  pl-4 pt-3">
            <div class="col-sm-4 pt-2">
                <input type="radio" class="custom-control-input timer1"
                       value=@ContentCompletionType.Timer id="timer1"
                       name="CompletionType">
                <label class="custom-control-label" for="timer1">@Language.eLearning.Enum.Timer</label>
            </div>
            <div class="timerWrapper from-group col-sm-4">
                @Html.EditorFor(model => model.Timer, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "In seconds" } })
                @Html.ValidationMessageFor(model => model.Timer, "", new { @class = "text-danger" })
            </div>
        </div>

