@using FEP.Model.eLearning
@model FEP.WebApiModel.eLearning.CreateOrEditContentModel

@Html.Partial("_contentCompletion", Model)
<hr />

<div>
    <div class="form-group">
        <label>@Language.eLearning.Content.IFrame</label>
        <div class="">

            @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>@Language.eLearning.Content.ShowIFrameAs</label>
        <div class="">

            @Html.EnumDropDownListFor(model => model.ShowIFrameAs, htmlAttributes: new { @class = "form-control" })
            <h6 class="font-weight-normal">(*Some website may not allow embedded IFrame. If nothing appeared when you view the embedded content, please select the Popup option.)</h6>
            @Html.ValidationMessageFor(model => model.ShowIFrameAs, "", new { @class = "text-danger" })
        </div>
    </div>
</div>