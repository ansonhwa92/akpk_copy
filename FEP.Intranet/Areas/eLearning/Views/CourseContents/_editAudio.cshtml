@using FEP.Model.eLearning
@model FEP.WebApiModel.eLearning.CreateOrEditContentModel

@Html.Partial("_contentCompletion", Model)
<hr />


@Html.HiddenFor(m => m.AudioType)
@Html.HiddenFor(m => m.UploadFileName)
<div class="form-group">
    <label>@Language.eLearning.Content.SelectAudio</label>
    <div class="col-sm-12">

        <!-- Default inline 1-->
        <div class="audio-radio row pl-4">

            <div class="col-sm-4 pt-2">
                <input type="radio" class="custom-control-input savedAudio" checked="checked" value=@AudioType.SavedAudio
                       id="audio1"
                       name="AudioType">
                <label class="custom-control-label" for="audio1">@Language.eLearning.Enum.SavedAudio</label>
            </div>
            <div class="form-group col-sm-8">
                @Html.DropDownListFor(model => model.ContentFileId, ViewBag.AudioList as SelectList, Language.eLearning.Content.SelectAudioList, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ContentFileId, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Default inline 2-->
        <div class="audio-radio row pl-4 ">

            <div class="col-sm-4 pt-2">
                <input type="radio" class="custom-control-input upAudio" value=@AudioType.UploadAudio
                       id="audio2"
                       name="AudioType">
                <label class="custom-control-label" for="audio2">@Language.eLearning.Enum.UploadAudio</label>
            </div>
            <div class="form-group col-sm-8">
                <div class="custom-file">
                    <input name="File" id="File" type="file" class="custom-file-input" accept="audio/*">
                    <label for="File" class="custom-file-label text-truncate">
                        @{
                            if (String.IsNullOrEmpty(Model.UploadFileName))
                            {
                                <text>Choose File..</text>
                            }
                            else
                            {
                                <text>@Model.UploadFileName</text>
                            }
                        }
                    </label>
                </div>

                @Html.ValidationMessageFor(model => model.File, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
</div>