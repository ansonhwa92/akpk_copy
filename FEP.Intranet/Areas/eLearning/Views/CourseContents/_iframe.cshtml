@using FEP.Model.eLearning

@model FEP.WebApiModel.eLearning.CreateOrEditContentModel

<div class="form-group">
    <label>
        This content is also available <a href="@Model.Url">here.</a>
    </label>

    @if (Model.ShowIFrameAs == ShowIFrameAs.Embedded)
    {

        <iframe src="@Model.Url" width="100%" height="700"
                frameborder="0" allowfullscreen></iframe>
    }
    else
    {
        <label>
            <br />
            This content requires you to allow pop up for this site.

            <br />
        </label>

        <script>
            window.open("@Model.Url", "popup", 'width=800, height=600');
            window.close();
        </script>
    }
</div>