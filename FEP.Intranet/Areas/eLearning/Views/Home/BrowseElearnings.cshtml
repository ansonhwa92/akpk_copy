                        </div>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="search-col-right">
                        <div class="top-filter-wrap">
                            <div class="showing-result">Showing 1 - @Model.LastIndex of @Model.ItemCount courses</div>
                            <div class="sorting-wrap">
                                <div class="sorting-dropdown">
                                    <select class="select2 form-control" name="sorting" id="selectSorting">
                                        <option value="default" @ViewBag.DefaultSorting>Default Sorting</option>
                                        <option value="title" @ViewBag.TitleSorting>Publication Title</option>
                                        @*<option value="year" @ViewBag.YearSorting>Publication Year</option>*@
                                        <option value="added" @ViewBag.AddedSorting>Date Added</option>
                                    </select>
                                </div>

                            </div>
                        </div>
                        <div class="empty_3"></div>
                        <!-- Filter result -->
                        <div class="some-list">
                            <div class="row">
                                @{
                                    var icount = 0;
                                    var coverpic1 = "";
                                    var coverpic2 = "";
                                    var authorpic = "";
                                }
                                @foreach (var item in Model.Courses)
                                {
                                    var imgFile = item.IntroImageFileName;

                                    if (string.IsNullOrEmpty(imgFile))
                                    {
                                        imgFile = @BaseURL + "/Content/logo-akpk.svg";
                                    }
                                    else
                                    {
                                        imgFile = @BaseURL + "/File/GetImg?fileName=" + @imgFile;
                                    }

                                    icount++;

                                    coverpic1 = BaseURL + "/" + "img" + "/cover-buku-1.jpg";
                                    coverpic2 = BaseURL + "/" + "img" + "/cover-buku-1.jpg";
                                    authorpic = BaseURL + "/" + "img" + "/8.jpg";


                                    <div class="col-lg-4 col-sm-6">
                                        <div class="card__wrapper">
                                            <div class="card__top">
                                                <div class="card__top__wapper"><img class="card__top__image" src="@imgFile" alt="image"></div>
                                            </div>
                                            <div class="card__body">
                                                <a class="card__title" href="@Url.Action("View", "Courses", new { area = "eLearning", @id = item.Id })">@item.Title</a>
                                                <div class="card__author">
                                                    <a class="card__col-left" href=""><span class="card__avatar"><img class="card__avatar__image" src="@authorpic"></span><span class="card__name-wrap"><span class="card__instructby">Instruct by</span><span class="card__author-name">Siti Saleha @item.Instructor</span></span></a>
                                                </div>
                                                <div class="card__text" href="@Url.Action("View", "Courses", new { area = "eLearning", @id = item.Id })">@Html.Raw(HttpUtility.HtmlDecode(@item.Description))</div>

                                                <div class="card__info">
                                                    <div class="card__col-left">
                                                        <div class="col-left__item"><span class="card__icon"><i class="la la-book"></i></span><span class="d-inline-block" data-toggle="tooltip" title="Total Modules">@item.TotalModules</span></div>
                                                        <div class="col-left__item"><span class="card__icon"><i class="la la-graduation-cap"></i></span><span class="d-inline-block" data-toggle="tooltip" title="Student Enrolled">@item.TotalStudent</span></div>
                                                    </div>
                                                    @*<div class="card__col-right"><span class="card__icon"><i class="la la-star"></i></span><span class="d-inline-block" data-toggle="tooltip" title="14,000 learners rated 5 star">5.0</span></div>*@
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <hr>

    @Html.Partial("_NewsArticle")

</main>

