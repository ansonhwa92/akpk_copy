<main id="landing-inner" class="rellax" data-rellax-speed="0">
    <section id="search-result" class="elearning">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="search-col-left">
                        <div class="input-keyword mb-5">
                            <input type="text" class="form-control form-control-rounded" placeholder="Type keyword here..." value="@Model.Keyword" name="keyword" id="textKeyword">
                            <div class="input-group-append">
                                <button class="btn btn-circle" type="button" id="buttonSearch"><i class="fas fa-search text-white"></i></button>
                            </div>
                        </div>
                        <!-- Listing Filter -->
                        <div class="listing_filter dropdown dd-side">
                            <div class="dropdown-menu">
                                <div class="listing-filter-inner">
                                    <div class="filter-type">
                                        <h4 class="color-darkblue">Categories</h4>
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="checkAll" @ViewBag.TypeAll>
                                            <label class="custom-control-label" for="checkAll" id="labelAll">All</label>
                                        </div>
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="checkCashFlow" @ViewBag.TypeCashflow>
                                            <label class="custom-control-label" for="checkCashFlow" id="labelCashflow">Cash Flow</label>
                                        </div>
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="checkCar" @ViewBag.TypeCar>
                                            <label class="custom-control-label" for="checkCar" id="labelCar">Car</label>
                                        </div>
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="checkHouse" @ViewBag.TypeHouse>
                                            <label class="custom-control-label" for="checkHouse" id="labelHouse">House</label>
                                        </div>
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="checkInvestment" @ViewBag.TypeInvestment>
                                            <label class="custom-control-label" for="checkInvestment" id="labelInvestment">Investment</label>
                                        </div>
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="checkProtection" @ViewBag.TypeProtection>
                                            <label class="custom-control-label" for="checkProtection" id="labelProtection">Protection</label>
                                        </div>
                                    </div>

                                    @*SKILL LEVEL - TAKDE DALAM COURSE*@
                                    @*<div class="filter-type">
                                            <h4 class="color-darkblue">Skill Level</h4>
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" id="checkBeginner" @ViewBag.LevelBeginner>
                                                <label class="custom-control-label" for="checkBeginner">Beginner</label>
                                            </div>
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" id="checkIntermediate" @ViewBag.LevelIntermediate>
                                                <label class="custom-control-label" for="checkIntermediate">Intermediate</label>
                                            </div>
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" id="checkAdvanced" @ViewBag.LevelAdvanced>
                                                <label class="custom-control-label" for="checkAdvanced">Advanced</label>
                                            </div>

                                        </div>*@

