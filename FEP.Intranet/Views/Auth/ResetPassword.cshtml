@model  ResetPasswordModel


@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

@section ButtonBack{

    <a href="@Url.Action("Login", "Auth", new { area = "" })" class="btn btn-outline-secondary"><span class="align-middle"><i class="la la-long-arrow-left">&nbsp;</i></span> Back</a>

}

<div class="login-wrapper" style="min-height: 100vh">
    <div class="col-sm-8 col-md-6 col-lg-4 mx-auto pt-3 mw-600">
        <div class="card">
            <div class="card-header text-center">                
                <p>Enter your email to reset your account password</p>
            </div>
            <div class="card-body">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form" }))
                {
                    @Html.AntiForgeryToken()
                                      
                    <div class="form-group">                       
                        <div class="input-group">
                            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control form-control-prepended", placeholder = Language.Auth.PlaceholderEmail } })
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>
                    </div>

                    <button type="submit" class="btn btn-secondary btn-block mt-3 mb-4">Reset</button>                   
                }
            </div>
            
        </div>
    </div>
</div>