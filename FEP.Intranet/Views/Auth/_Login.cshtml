@model LogInModel

@{
    Layout = null;
}

<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">

        <div class="card navbar-shadow">
            <div class="card-header text-center">
                <h4 class="card-title">Sign In</h4>
                <p class="card-subtitle">Access your account</p>
            </div>
            <div class="card-body">

                <form id="formLogin" action="@Url.Action("ExternalLogin", "Auth", new { area = "" })" method="post">

                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.FEPLabelFor(m => m.LoginId)
                        <div class="input-group input-group-merge">
                            @Html.EditorFor(m => m.LoginId, new { htmlAttributes = new { @class = "form-control form-control-prepended", @placeholder = "Your Login Id" } })
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <span class="fa fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.LoginId, "")
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="password">Your Password:</label>
                        <div class="input-group input-group-merge">
                            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control form-control-prepended", @placeholder = "Your Password" } })
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <span class="fa fa-key"></span>
                                </div>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.Password, "")
                    </div>
                    <div class="form-group ">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>
                    <div class="text-center">
                        <a href="@Url.Action("ForgetPassword", "Auth", new { area = "" })" class="text-black-70" style="text-decoration: underline;">Forgot Password?</a>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center text-black-50">
                Not yet a member? <a href="@Url.Action("SignUp", "Auth", new { area = "" })">Sign Up</a>
            </div>
        </div>

    </div>
</div>
